<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_information"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <include
            android:id="@+id/tittlebar"
            layout="@layout/tittle_bar" />

        <TextView
            android:id="@+id/message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="供求"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/message_add_msg"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@drawable/more_vertical" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/backgroundgrey"
        android:gravity="center"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <TextView
            android:id="@+id/searchedittext"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/tittle_edittext_bg"
            android:drawableLeft="@drawable/discover"
            android:gravity="center_vertical"
            android:hint="请输入您想要搜索的内容"
            android:textColor="@color/colorSecondaryText" />

    </LinearLayout>

    <ExpandableListView
        android:id="@+id/info_expdb_lv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="2dp"
        android:background="@color/white"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000">

    </ExpandableListView>

</LinearLayout>